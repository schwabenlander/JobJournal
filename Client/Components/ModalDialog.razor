@if (isVisible)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@ModalTitle</h5>
                    <button type="button" class="close" @onclick="Hide" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @ChildContent
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Hide" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">OK</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public string ModalTitle { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public EventCallback<bool> OnDialogClosed { get; set; }

    bool isVisible { get; set; }

    public void Show()
    {
        isVisible = true;
        StateHasChanged();
    }

    public async Task Hide()
    {
        isVisible = false;
        await OnDialogClosed.InvokeAsync(true);
        StateHasChanged();
    }
}

<tr>
    <td colspan="4">
        <div class="card">
            <h3 class="card-header">@Contact.FullName</h3>
            <div class="card-body">
                <p class="card-text">
                    <ul>
                        <li>
                            Phone Number: @Contact.PhoneNumber
                        </li>
                        <li>
                            E-mail Address: <a href="mailto:@Contact.EmailAddress">@Contact.EmailAddress</a>
                        </li>
                        <li>
                            Date of First Contact: @Contact.FirstContactDate?.ToShortDateString()
                        </li>
                        <li>
                            Date of Most Recent Contact: @Contact.MostRecentContactDate?.ToShortDateString()
                        </li>
                    </ul>
                </p>
                <button type="button" class="btn btn-primary" @onclick="OnHideDetails">Hide Details</button>
            </div>
        </div>
    </td>
</tr>

@code {
    [Parameter]
    public CompanyContactDTO Contact { get; set; }

    [Parameter]
    public EventCallback OnHideDetails { get; set; }
}
